<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/notesItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_2sdp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="@dimen/_2sdp"
        app:cardBackgroundColor="@color/dark_shade_blue"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/notes_item_click"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cvOval"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/red_oval"
                android:layout_gravity="end"
                />

            <TextView
                android:id="@+id/cvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/cvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitle"
                android:layout_marginTop="4dp"
                android:textColor="#B5C4C4"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/cvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_23_23_2332"
                android:layout_marginTop="10dp"
                android:textColor="#F8F9F9"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>